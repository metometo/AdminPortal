<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <!-- ************************** -->
	<!-- 							-->
	<!-- Custom Validation Messages -->
	<!-- 							-->
	<!-- ************************** -->

	<application>
		<message-bundle>
			com.bundles.message
		</message-bundle>
	</application>
	
	
	<!-- ************************** -->
	<!-- 							-->
	<!-- Navigation rules			 -->
	<!-- 							-->
	<!-- ************************** -->
	
	<navigation-rule>
		<from-view-id>/registration.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>registered</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect include-view-params="true">  
            	<view-param>  
                    <name>registered</name>  
                    <value>true</value>  
                </view-param>  
            </redirect>  
		</navigation-case>
    </navigation-rule>
    
    
    <navigation-rule>
		<from-view-id>/admin/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>registered</from-outcome>
			<to-view-id>/admin/index.xhtml</to-view-id>
			<redirect include-view-params="true">
				<view-param>  
                    <name>registered</name>  
                    <value>true</value>  
                </view-param>    
            </redirect>  
         </navigation-case>
         <navigation-case>
            <from-outcome>error</from-outcome>
			<to-view-id>/admin/index.xhtml</to-view-id>
			<redirect include-view-params="true">
				<view-param>  
                    <name>registered</name>  	
                    <value>error</value>  
                </view-param>    
            </redirect>
		</navigation-case>
		<navigation-case>
            <from-outcome>deleting_error</from-outcome>
			<to-view-id>/admin/index.xhtml</to-view-id>
			<redirect include-view-params="true">
				<view-param>  
                    <name>deleting</name>  	
                    <value>error</value>  
                </view-param>    
            </redirect>
		</navigation-case>
    </navigation-rule>	
    
   
    <navigation-rule>
		<from-view-id>/admin/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>user_notselected</from-outcome>
			<to-view-id>/admin/index.xhtml</to-view-id>
			<redirect include-view-params="true">
				<view-param>  
                    <name>edit_user</name>  
                    <value>user_notselected</value>  
                </view-param>    
            </redirect>  
         </navigation-case>
         <navigation-case>
            <from-outcome>user_updated</from-outcome>
			<to-view-id>/admin/index.xhtml</to-view-id>
			<redirect include-view-params="true">
            </redirect>
		</navigation-case>
		<navigation-case>
            <from-outcome>user_updated_error</from-outcome>
			<to-view-id>/admin/index.xhtml</to-view-id>
			<redirect include-view-params="true">
				<view-param>  
                    <name>edit_user</name>  	
                    <value>error</value>  
                </view-param>    
            </redirect>
		</navigation-case>
    </navigation-rule>	
	
</faces-config>