<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http use-expressions="true">
		<intercept-url pattern="/**" access="hasRole('user')" />	<!--  check all url-s in this app is the user authenticated -->
		<form-login/> <!-- Use default login form -->
		<logout logout-url="/logout" logout-success-url="/index" /> <!--  The logout url --> 
	</http>


	<authentication-manager>
	
		<authentication-provider>
			<user-service>
				<user name="user" password="user" authorities="user"/>
			</user-service>
		</authentication-provider>
	</authentication-manager>
	


</beans:beans>

